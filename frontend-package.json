{
  "name": "git-version-analyzer-frontend",
  "version": "1.0.0",
  "description": "Frontend Electron para Git Version Analyzer",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "git",
    "version control",
    "electron",
    "desktop app",
    "version analysis"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.yourname.gitversionanalyzer",
    "productName": "Git Version Analyzer",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}